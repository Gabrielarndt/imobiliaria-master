<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Informações do Usuário</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</head>
<body class="container">
    <h1 class="mt-5">Editar Informações do Usuário</h1>
    <!-- Formulário para editar informações do usuário -->
    <form id="editarForm" action="/api/editarUsuario" method="POST" class="mt-4">
        <!-- Campos para editar informações do usuário -->
        <div class="mb-3">
            <label for="password" class="form-label">Senha:</label>
            <div class="input-group">
                <input type="password" id="password" name="password" class="form-control" aria-describedby="password-toggle" required>
                <button type="button" class="btn btn-outline-secondary" id="password-toggle"><i class="fas fa-eye"></i></button>
            </div>
        </div>
        <div class="mb-3">
            <label for="username" class="form-label">Nome de Usuário:</label>
            <input type="text" id="username" name="username" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Telefone:</label>
            <input type="text" id="phone" name="phone" class="form-control" required>
        </div>
        <!-- Botão para enviar o formulário -->
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </form>
    <script src="../componentes/editaUser.js"></script>
</body>
</html>