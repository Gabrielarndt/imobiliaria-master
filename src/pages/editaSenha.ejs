<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Senha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</head>

<body class="container">
    <h1 class="mt-5">Editar Senha</h1>
    <form id="editarSenhaForm" action="/api/editarSenha" method="POST" class="mt-4">
        <!-- Campos para editar a senha -->
        <div class="mb-3">
            <label for="oldPassword" class="form-label">Senha Antiga:</label>
            <div class="input-group">
                <input type="password" id="oldPassword" name="oldPassword" class="form-control"
                    aria-describedby="password-toggle" required>
                <button type="button" class="btn btn-outline-secondary" id="password-toggle"><i
                        class="fas fa-eye"></i></button>
            </div>
        </div>
        <div class="mb-3">
            <label for="newPassword" class="form-label">Senha nova:</label>
            <div class="input-group">
                <input type="password" id="newPassword" name="newPassword" class="form-control"
                    aria-describedby="password-toggle" required>
                <button type="button" class="btn btn-outline-secondary" id="password-toggle2"><i
                        class="fas fa-eye"></i></button>
            </div>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirma senha:</label>
            <div class="input-group">
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                    aria-describedby="password-toggle" required>
                <button type="button" class="btn btn-outline-secondary" id="password-toggle3"><i
                        class="fas fa-eye"></i></button>
            </div>
        </div>
        <!-- BotÃ£o para enviar o formulÃ¡rio -->
        <button type="submit" class="btn btn-primary">Salvar Nova Senha</button>
    </form>
    <script src="../componentes/editaSenha.js"></script>
</body>

</html>